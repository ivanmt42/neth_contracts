<%= link_to 'View Customer', customer_path(@customer) %>
<hr />

<h1>Create New Contract for
<%= customer_full_name(@customer) %></h1>

<% form_for ([@customer, @contract]) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :job_type_id, "Job Type:" %><br />
	<%= f.collection_select(:job_type_id, JobType.all, :id, :label) %>
  </p>
  <p>
    <%= f.label :start_date, "Start Date:" %><br />
    <%= f.date_select( :start_date, :order => [:month, :day, :year], :include_blank => true)%>
  </p>
  <p>
    <%= f.label :completion_date, "Completion Date:" %><br />
    <%= f.date_select( :completion_date, :default => 42.days.from_now, :order => [:month, :day, :year], :include_blank => true) %>
  </p>
  <p>
    <%= f.label :is_essence, "Time is of the Essence:" %><br />
    <%= f.select :is_essence,
		[["NO", false],
		["YES", true]] %>
  </p>
  <p>
    <%= f.label :total_cost, "Total Cost:" %><br />
	<span style="font-size: x-small; color: gray;">(Enter exactly how Total Cost should appear in printed contract. ex: $1000.00)</span><br />
    <%= f.text_field :total_cost %>
  </p>
  <p>
    <%= f.label :down_payment, "Down Payment:" %><br />
	<span style="font-size: x-small; color: gray;">(Enter exactly how Down Payment should appear in printed contract. ex: 1/3 of Total)</span><br />
    <%= f.text_field :down_payment %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<br />
<hr />

<%= link_to 'View Customer', customer_path(@customer) %>

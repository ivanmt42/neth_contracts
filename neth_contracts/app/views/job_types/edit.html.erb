<h1>Edit Job Name</h1>
<span style="font-size: x-small; color: gray;">(Enter Job Name exactly how it should appear in printed contract. ex: ROOFING)</span><br />

<% form_for(@job_type) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :label, "Job Name: " %><%= f.text_field :label %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

